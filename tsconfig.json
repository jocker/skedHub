{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "baseUrl": "./src",
    "paths": {
      "@sked/app/*": [
        "app/*"
      ],
      "@sked/lib/*": [
        "lib/*"
      ]
    },
    "outDir": "./dist/out-tsc",
    //        "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ]
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "test.ts",
    "./**/*.spec.ts"
  ]
}
